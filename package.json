		"svelte": "^3.44.0",
		"sveltestrap": "latest",
		"bulma": "latest",
		"svelma": "latest",
		"node-sass": "latest",
		"svelte-preprocess": "latest",
		"rollup-plugin-postcss": "latest",
		"@fortawesome/fontawesome-free": "latest",
		"svelte-check": "^2.7.1",
		"typescript": "^4.7.2"
